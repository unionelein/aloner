{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('node_modules/lightgallery/src/css/lightgallery.css') }}">
    <link href="http://vjs.zencdn.net/4.12/video-js.css" rel="stylesheet">

    <link rel="stylesheet" href="{{ asset('css/markup.css') }}">
    <link rel="stylesheet" href="{{ asset('css/event_party.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                <div class="event-party-status">{{ eventParty.currentStatusTitle }}</div>

                <nav>
                    <div class="nav nav-tabs event-party-tabs-wrapper" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link active" id="nav-info-tab" href="#nav-info" data-toggle="tab" role="tab" aria-controls="nav-info" aria-selected="true">
                            <i class="far fa-list-alt"></i> Инфо
                        </a>
                        <a class="nav-item nav-link" id="nav-gallery-tab" href="#nav-gallery" data-toggle="tab" role="tab" aria-controls="nav-gallery" aria-selected="false">
                            <i class="fa fa-file-image-o"></i> Галерея
                        </a>
                        <a class="nav-item nav-link" id="nav-contacts-tab" href="#nav-contacts" data-toggle="tab" role="tab" aria-controls="nav-contacts" aria-selected="false">
                            <i class="fas fa-address-book"></i> Контакты
                        </a>
                    </div>
                </nav>

                <div class="tab-content nav-block-content-wrapper">
                    <div class="tab-pane fade show active block nav-block" id="nav-info" role="tabpanel" aria-labelledby="nav-info-tab">
                        <div class="block-body">
                            {% include 'eventParty/tab_info.html.twig' %}
                        </div>
                    </div>
                    <div class="tab-pane fade show block nav-block" id="nav-gallery" role="tabpanel" aria-labelledby="nav-gallery-tab">
                        <div class="block-body">
                            {% include 'eventParty/tab_gallery.html.twig' %}
                        </div>
                    </div>
                    <div class="tab-pane fade block nav-block" id="nav-contacts" role="tabpanel" aria-labelledby="nav-contacts-tab">
                        <div class="block-body">
                            {% include 'eventParty/tab_contacts.html.twig' %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-4">
                <div class="participants-wrapper">
                    {% for user in eventParty.users %}
                        <div class="user-icon-block {% if user == app.user %} current-user{% endif %}">
                            <img src="{{ asset(user.avatarPath) }}" alt="Аватар пользователя {{ user.nicknameFor(eventParty) }}">
                            <div class="user-icon-name">{{ user.nicknameFor(eventParty) }}</div>
                        </div>
                    {% endfor %}
                    <div class="clearfix"></div>
                </div>

                <div class="block chat-block">
                    <div class="block-body chat-wrapper">
                        <div class="chat-messages-block invisible">
                            {% for message in messagesHistory %}
                                <p>
                                    <b>{{ message.user.name }}: </b>
                                    {{ message.message }}
                                </p>
                            {% endfor %}
                        </div>

                        <div class="delimiter"></div>

                        <textarea class="chat-message-input" maxlength="500" placeholder="Напишите что-нибудь..."></textarea>

                        <div class="text-right">
                            <a href="#" class="chat-send-message-btn">Отправить</a>
                        </div>
                    </div>
                </div>

                <div class="row event-party-actions">
                    <div class="col-sm-6">
                        <a href="{{ path('app_skip_event_party', {id: eventParty.id}) }}" class="btn btn-primary w-100">Дальше</a>
                    </div>

                    <div class="col-sm-6">
                        <a href="{{ path('app_leave_event_party', {id: eventParty.id}) }}" class="btn btn-danger w-100">Выход</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-none js-data">
            <div id="current-user" data-temp-hash="{{ app.user.tempHash }}"></div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/libs/authoban.js') }}"></script>
    <script src="http://vjs.zencdn.net/4.12/video.js"></script>

    <script src="{{ asset('node_modules/lightgallery/src/js/lightgallery.js') }}"></script>

    <script src="{{ asset('node_modules/lightgallery/lib/jquery.mousewheel.min.js') }}"></script>
    <script src="{{ asset('node_modules/lightgallery/modules/lg-zoom.min.js') }}"></script>
    <script src="{{ asset('node_modules/lightgallery/modules/lg-thumbnail.js') }}"></script>
    <script src="{{ asset('node_modules/lightgallery/modules/lg-fullscreen.js') }}"></script>
    <script src="{{ asset('node_modules/lightgallery/modules/lg-video.js') }}"></script>

    <script src="{{ asset('js/event_party/Chat.js') }}"></script>
    <script src="{{ asset('js/event_party/Announcement.js') }}"></script>
    <script src="{{ asset('js/event_party/event_party.js') }}"></script>
{% endblock %}
