{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container">
        {{ form_start(form) }}
            <div class="row">
                <div class="col-sm-6 offset-sm-3">
                    {{ form_row(form.name) }}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 offset-sm-3">
                    {{ form_row(form.city) }}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3 offset-sm-3">
                    {{ form_row(form.sex) }}
                </div>
                <div class="col-sm-3">
                    {{ form_row(form.birthday) }}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 offset-sm-3">
                    {{ form_row(form.phone) }}
                </div>
            </div>

        <div class="row">
            <div class="col-sm-4 offset-sm-3">
                {{ form_row(form.acceptLicense) }}
            </div>
            <div class="col-sm-2">
                <button class="btn btn-lg btn-primary float-right" type="submit">
                    гоу гоу
                </button>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
