<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Aloner{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap/awesome-bootstrap-checkbox.css') }}">
            <link rel="stylesheet" href="{{ asset('css/font-awesome/css/all.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap/font-awesome.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/base.css') }}">
        {% endblock %}
    </head>
    <body>
        <header class="app-header">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 logo-wrapper">
                        <img class="logo" src="{{ asset('img/app_logo.png') }}" alt="AL">
                        <span class="logo-text">Aloner</span>

                        {% if is_granted(constant('App\\Entity\\User::ROLE_FULL_REG')) %}
                            <a class="float-right" href="{{ path('app_logout') }}">Выйти</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </header>

        <div class="app-content">
            {% block body %}{% endblock %}
        </div>

        <footer class="app-footer">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        2019 &copy; Aloner | Поддержка
                    </div>
                </div>
            </div>
        </footer>

        {% block javascripts %}
            <script src="{{ asset('js/libs/jquery/jquery-3.3.1.min.js') }}"></script>
            <script src="{{ asset('js/libs/bootstrap/bootstrap.min.js') }}"></script>
            <script src="{{ asset('js/base.js') }}"></script>
        {% endblock %}
    </body>
</html>
