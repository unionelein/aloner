{% trans_default_domain 'base' %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Aloner{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="app-header">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 logo-wrapper ">
                        <a href="/" class="d-inline-block text-decoration-none">
                            <img class="logo-img" src="{{ asset('build/static/img/app_logo.png') }}" alt="(AL)">
                            <span class="logo-text">Aloner</span>
                        </a>

                        {% if app.user %}
                            <a class="float-right" href="{{ path('app_logout') }}">{% trans %}base.exit{% endtrans %}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </header>

        <div class="app-content">
            {% block body %}{% endblock %}
        </div>

        <footer class="app-footer">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        {% trans %}base.support{% endtrans %}
                    </div>
                    <div class="col-sm-6 text-right">
                        {% set year = 'now'|date('Y') %}
                        &copy; {{ creationYear == year ? year : creationYear ~ ' - ' ~ year }} Aloner
                    </div>
                </div>
            </div>
        </footer>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
